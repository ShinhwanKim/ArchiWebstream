<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="회원가입"
            android:textColor="@color/colorDark"
            android:gravity="center"
            android:textSize="@dimen/activity_header_text_size"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:textColor="#6B6B6B"
            android:textSize="12dp"
            android:text="*4~20자의 영문 소문자,숫자만 사용 가능합니다. "/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ouline"
            android:padding="4dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SignupActivity_edittext_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text"
                android:maxLength="20"
                android:hint="아이디"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/SignupActivity_alert_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:textColor="#E91E63"
            android:text="이미 사용중인 아이디 입니다."
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:textColor="#6B6B6B"
            android:textSize="12dp"
            android:text="*8~20자의 영문자,숫자,특수문자를 모두 사용하세요."
            android:layout_marginTop="12dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ouline"
            android:padding="4dp"
            android:layout_marginTop="3dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SignupActivity_edittext_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="textPassword"
                android:maxLength="25"
                android:hint="비밀번호"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/SignupActivity_alert_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:textColor="#E91E63"
            android:text="유효하지 않는 비밀번호입니다."
            android:visibility="gone"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ouline"
            android:padding="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="3dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SignupActivity_edittext_password_reconfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="textPassword"
                android:maxLength="25"
                android:hint="비밀번호 확인"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/SignupActivity_alert_password_reconfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:textColor="#E91E63"
            android:text="비밀번호가 일치하지 않습니다."
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:textColor="#6B6B6B"
            android:textSize="12dp"
            android:text="*4~16자의 영문자,숫자,한글 모두 사용 가능합니다. "
            android:layout_marginTop="12dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ouline"
            android:padding="4dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SignupActivity_edittext_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="닉네임"
                android:inputType="text"
                android:maxLength="16"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/SignupActivity_alert_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:textColor="#E91E63"
            android:text="이미 사용중인 닉네임입니다."
            android:visibility="gone"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ouline"
            android:padding="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="3dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SignupActivity_edittext_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text"
                android:maxLength="35"
                android:hint="이메일"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/SignupActivity_alert_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:textColor="#E91E63"
            android:text="유효하지 않은 이메일입니다."
            android:visibility="gone"/>

        <Button
            android:id="@+id/SignupActivity_button_email_auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="이메일 인증하기" />

        <Button
            android:id="@+id/SignupActivity_button_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="회원 가입 완료" />
    </LinearLayout>



</ScrollView>